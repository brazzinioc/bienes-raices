extends ../layout/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raíces
        h2.text-center.text-2xl.font-extrabold= pageTitle

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/register" noValidate)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="name") Tu Nombre
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu nombre" type="text" name="name" value= data ? data.name : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Tu Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="micorreo@gmail.com" type="email" name="email" value= data ? data.email : '') 
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password-confirm") Repetir Contraseña
                        input#password-confirm.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="password" name="password_confirm")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta ? Inicia Sesión
                        a.text-gray-500.text-xs(href="/auth/password-recovery") Olvidé mi contraseña
                        
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")
                