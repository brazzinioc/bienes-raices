extends ../layout/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raíces
        h2.text-center.text-2xl.font-extrabold= pageTitle

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5 
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="micorreo@gmail.com" type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="micorreo@gmail.com" type="password" name="password")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/register") ¿No tienes cuenta ? Crear una
                        a.text-gray-500.text-xs(href="/auth/password-recovery") Olvidé mi contraseña

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Iniciar Sesión")
                